start_time = time.time()

def calc_fluxes(fluxes_ann, fluxes, area, domain, timeseries):

    
    # Area of Interest
    x_constraint = iris.Constraint(longitude=lambda x: domain[0] < x < domain[1])
    y_constraint = iris.Constraint(latitude=lambda y: domain[2] < y < domain[3])
    z_constraint = iris.constraint(depth=lambda z: domain[4] < z < domain[5])

    fluxes_ann = fluxes_ann.extract(x_constraint, y_constraint, z_constraint)

    # Print Sample Box Coordinates:
        
    for name, var in fluxes.iteritems():
        if name == 'temp_xflux_adv':
            x_flux = fluxes_ann[name].collapsed(['depth', 'latitude'], iris.analysis.MEAN)
            fluxes_ann[name] = x_flux[0] - x_flux[-1]
        elif name == 'temp_yflux_adv':
            y_flux = fluxes_ann[name].collapsed(['depth', 'longitude'], iris.analysis.MEAN)
            fluxes_ann[name] = y_flux[0] - y_flux[-1]             
        elif name =='temp_zflux_adv':
            z_flux = fluxes_ann[name].collapsed(['latitude', 'longitude'], iris.analysis.MEAN)
            fluxes_ann[name] = z_flux[0] - z_flux[-1]             
        else:
            fluxes_ann[name] = fluxes_ann[name].collapsed(['depth', 'latitude', 'longitude'], iris.analysis.SUM)                                         

    return flux_x



